@page "/error404-page"

<div class="error-page-container">
    <h3>Страница не найдена</h3>

    <svg width="200" height="200" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg" style="margin-top: 20px">
        <circle cx="50" cy="50" r="40" stroke="black" stroke-width="1" fill="#b3e5fc" />
        <rect x="45" y="20" width="10" height="40" fill="white">
            <animate attributeName="y" from="20" to="60" dur="1s" repeatCount="indefinite" />
        </rect>
        <circle cx="50" cy="30" r="3" fill="black" />
        <path d="M 50 60 C 48 65, 52 65, 50 60" stroke="black" stroke-width="1" fill="none" />
    </svg>

    <p class="loading-text">Ресурсы скоро прибудут на свое место...</p>
</div>

<style>
    .error-page-container {
        text-align: center;
        margin: 50px;
    }

    .loading-text {
        font-family: Arial, sans-serif;
        font-size: 16px;
        /* Реализация мерцания через анимацию opacity */
        animation: alternate-fade 2s infinite;
        /* Используется для чередования прозрачности 0.3 и 1 */
        animation-timing-function: steps(2, start);
    }

    /* Используем CSS-переменные для задания автоматически чередующейся прозрачности */
    .loading-text {
        opacity: 0;
        transition: opacity 1s ease-in-out;
        animation-direction: alternate;
    }
</style>


